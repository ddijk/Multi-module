                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                   </plugin>
        </plugins>
    </build>

    <modules>
        <module>gui</module>
        <module>backend</module>
    </modules>
</project>
